<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="awesomeapp.com.medcenter.AddPatient" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="New Patient"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="34dp"
        android:background="@drawable/search"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_last_name"
        android:layout_alignLeft="@+id/et_first_name"
        android:text="First Name" />

    <TextView
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_birthday"
        android:layout_below="@+id/et_first_name"
        android:layout_marginTop="24dp"
        android:text="Birthday" />

    <EditText
        android:id="@+id/et_birthday"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_below="@+id/tv_birthday"
        android:layout_toLeftOf="@+id/tv_last_name"
        android:background="@drawable/search"
        android:ems="10"
        android:text="01/01/2000" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_birthday"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/search"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_last_name"
        android:layout_alignLeft="@+id/et_last_name"
        android:text="Last Name" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_birthday"
        android:layout_alignBottom="@+id/et_birthday"
        android:layout_alignLeft="@+id/et_last_name"
        android:layout_marginLeft="22dp"
        android:background="@drawable/search"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_phone_number"
        android:layout_alignLeft="@+id/et_phone_number"
        android:text="Phone Number" />

    <TextView
        android:id="@+id/tv_blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_birthday"
        android:layout_below="@+id/et_birthday"
        android:layout_marginTop="18dp"
        android:text="Blood Type" />

    <EditText
        android:id="@+id/et_blood_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_blood_type"
        android:layout_alignRight="@+id/tv_blood_type"
        android:layout_below="@+id/tv_blood_type"
        android:background="@drawable/search"
        android:ems="10" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_blood_type"
        android:layout_below="@+id/f"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/search" />

    <TextView
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_user_name"
        android:layout_centerVertical="true"
        android:text="@string/username" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_user_name"
        android:layout_below="@+id/et_user_name"
        android:layout_marginTop="16dp"
        android:text="@string/password" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_user_name"
        android:layout_below="@+id/password"
        android:ems="10"
        android:inputType="textPassword" 
        android:background="@drawable/search"/>

    <EditText
        android:id="@+id/et_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_password"
        android:layout_below="@+id/textView1"
        android:background="@drawable/search"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reason"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="17dp"
        android:text="Reason for Entering" />

    <Button
        android:id="@+id/b_submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reason"
        android:layout_below="@+id/et_reason"
        android:layout_marginTop="16dp"
        android:text="Submit"
        android:background="@drawable/corner" />

    <Button
        android:id="@+id/b_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_submit"
        android:layout_alignBottom="@+id/b_submit"
        android:layout_alignLeft="@+id/et_phone_number"
        android:background="@drawable/corner"
        android:text="Cancel" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/prescriptionWriter"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/patient_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="@string/doctor" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_doctor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/patientName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selected_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:text="@string/selected_patient_name" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selected_patient_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/prescriptionName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selected_patient_prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_centerHorizontal="true"
        android:text="@string/selected_patient_prescription1" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/pillNumber"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selected_patient_prescription_amt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView03"
        android:layout_centerHorizontal="true"
        android:text="@string/pillCount" />

    <Button
        android:id="@+id/b_reject"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_cancel"
        android:layout_alignBottom="@+id/b_cancel"
        android:layout_centerHorizontal="true"
        android:text="@string/reject" />

    <Button
        android:id="@+id/b_cancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selected_patient_prescription_amt1"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/TextView03"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/b_ps_confirm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_reject"
        android:layout_alignBottom="@+id/b_reject"
        android:layout_toLeftOf="@+id/TextView03"
        android:text="@string/fill" />

</RelativeLayout>
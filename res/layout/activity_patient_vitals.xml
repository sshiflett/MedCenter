<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" >
    </TableLayout>
    
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginRight="60dp"
        android:text="@string/stop" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="45dip"
                android:layout_height="wrap_content"
                android:text="@string/rate" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:text="@string/oxygen" />
            
            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
           
                android:text="@string/bloodp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="@string/patient1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notes1" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="@string/patient2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notes2" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="@string/patient3" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notes3" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableLayout2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="37dp" >

        <TextView
            android:id="@+id/textView0"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:text="@string/testPatient" 
            android:textSize="35sp"/>
        
        <TextView
             android:id="@+id/textView10"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="@string/patient1"
            android:textSize="35sp"
            />
    </TableRow>

    <Button
        android:id="@+id/button1"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow0"
        android:layout_below="@+id/tableRow0"
        android:layout_marginTop="50dp"
        android:text="@string/record" />

</RelativeLayout>